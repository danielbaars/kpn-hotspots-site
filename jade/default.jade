- var dev = false;

include _variables
include _mixins
include _content
include _bel-mij-terug-formulier

doctype html
html(lang='nl')
	block head
	head
		meta(charset='utf-8')
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1.0")
		if (typeof(metaDescription) !== 'undefined')
			meta(name="description" content="#{metaDescription}")
		else
			meta(name="description" content="Bied uw klanten extra service met snel, betrouwbaar en gratis draadloos internet met KPN WiFi Hotspots. Sluit u ook aan bij meer dan 4000 locaties.")
		meta(name='author' content= "#{companyName}")
		meta(name="language" content="dutch")
		if dev
			meta(name="robots" content="noindex, nofollow")
		if (typeof(pageTitle) !== 'undefined')
			title #{pageTitle} | #{companyName}
		else
			title #{companyName}
		link(rel="shortcut icon" href="img/kpn_favicon.ico")
		//-link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css" rel="stylesheet")
		//-link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.0/css/bootstrap-glyphicons.css" rel="stylesheet")
		link(rel='stylesheet' href='css/app.css')
		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
		script(src='https://www.google.com/recaptcha/api.js')
	body(class="#{bodyClass}")
		if !hide_cookies
			include _cookie_warning
		block content
	script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/1.11.3/jquery.min.js")
	script(src="js/bootstrap-modals.min.js")
	script(src="js/neo.min.js")
	script(src="js/cookie_warning.js")
	script(src="js/contactform.js")
	//-script(src="js/app.js")
	if quotes
		script(src="js/quotes.js")
	block scripts
