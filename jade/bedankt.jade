mixin keuze(classModifier)
	.keuze(class="keuze--#{classModifier}")
		h3.keuze__header Uw bestelling
		ul.keuze__list
			li.keuze__list__item 1 KPN WiFi HotSpot access point
			li.keuze__list__item Contractduur: 36&nbsp;maanden
			li.keuze__list__item Maandelijkse kosten: €&nbsp;50,- excl. BTW
		h3.keuze__header Uw korting
		ul.keuze__list
			li.keuze__list__item #[strong Gratis apparatuur en installatie] (normaal €&nbsp;600,&#8209;)
			li.keuze__list__item #[strong Eerste zes maanden 50%&nbsp;korting] op maandelijkse kosten

extends default
block head
	- var devVersion = true
	- var version = 1
	- var pageTitle = 'Bedankt voor uw bestelling'
	- var bodyClass = 'bestellen bedankt'
block content
	include _masthead
	.hero__outer
		.hero__visual--mobile
		.container
			.row
				.col-xs-12.col-sm-8.col-md-6
					.hero
						.hero__text
							h1.hero__header Bedankt voor uw bestelling
							p.hero__intro In 4 tot 6 weken bent u een KPN WiFi Hotspot
	.bon__outer
		.container
			.row
				.col-xs-12.hidden-ts-lg#bekijk
					.bekijk-uw-bestelling Bekijk uw bestelling
					+keuze('xs')
	.article__outer
		.container
			.article
				.row
					.col-xs-12.col-ts-7.col-ts-xpr
						h2.article__header We nemen contact met u op
						p Binnen 2 werkdagen bellen we u om uw bestelling door te nemen. We maken dan meteen een afspraak voor de installatie van uw KPN WiFi HotSpot.
						p Heeft u nog vragen? Neem dan contact op met onze helpdesk op #[a(href='tel:08000414').phone-number 0800&nbsp;0414].
					.hidden-xs-ls.col-ts-5.col-ts-xpl
						+keuze
	include _footer